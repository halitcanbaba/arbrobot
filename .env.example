# =============================================================================
# CRYPTO ARBITRAGE BOT CONFIGURATION
# =============================================================================
# Copy this file to .env and customize the settings below

# =============================================================================
# CORE TRADING PARAMETERS
# =============================================================================

# Minimum cross-exchange spread to trigger alerts (basis points)
MIN_SPREAD_BPS=25.0

# Minimum triangular arbitrage gain to trigger alerts (basis points) 
MIN_TRI_GAIN_BPS=15.0

# Minimum notional value for calculations (USD)
MIN_NOTIONAL=100.0

# Order book depth levels to analyze (1-20)
DEPTH_LEVELS=5

# =============================================================================
# SYMBOL UNIVERSE
# =============================================================================

# Trading pairs to monitor (comma-separated)
SYMBOL_UNIVERSE=BTC/USDT,ETH/USDT,BNB/USDT,XRP/USDT,ADA/USDT,SOL/USDT,MATIC/USDT,DOT/USDT,AVAX/USDT,UNI/USDT

# Base assets for triangular arbitrage (comma-separated)
TRI_BASES=USDT,USDC,BTC,ETH,TRY

# Quote assets to exclude from triangular arbitrage (comma-separated)
# Useful for avoiding volatile assets as quote pairs
TRI_EXCLUDE_QUOTES=BTC,ETH

# =============================================================================
# EXCHANGE CONFIGURATION
# =============================================================================

# Exchanges to include (comma-separated)
# Available: binance,bybit,okx,kucoin,mexc,huobi,cointr
INCLUDE_EXCHANGES=binance,bybit,okx,kucoin,mexc,cointr

# Exchanges to exclude (comma-separated)  
EXCLUDE_EXCHANGES=

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================

# Order book update coalescing interval (milliseconds)
COALESCE_MS=100

# Cross-exchange scan interval (milliseconds)
CROSS_SCAN_MS=1000

# Triangular arbitrage scan interval (milliseconds)
TRI_SCAN_MS=2000

# Health check interval (milliseconds)
HEALTH_CHECK_MS=30000

# =============================================================================
# TELEGRAM ALERTS
# =============================================================================

# Telegram bot token (get from @BotFather)
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Telegram chat ID (your user ID or channel ID)
TELEGRAM_CHAT_ID=your_chat_id_here

# Alert deduplication window (seconds)
ALERT_DEDUP_SECONDS=300

# =============================================================================
# DATABASE SETTINGS
# =============================================================================

# Database file path
DATABASE_PATH=data/arbitrage.db

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# =============================================================================
# FEE OVERRIDES (OPTIONAL)
# =============================================================================
# Override default fee rates for specific exchanges
# Format: FEE_OVERRIDE_{EXCHANGE}_{MAKER|TAKER}=decimal_rate

# Example overrides:
# FEE_OVERRIDE_BINANCE_TAKER=0.0005
# FEE_OVERRIDE_KRAKEN_MAKER=0.0015
# FEE_OVERRIDE_COINBASE_TAKER=0.006

# =============================================================================
# ADVANCED SETTINGS
# =============================================================================

# Enable/disable specific features
ENABLE_CROSS_EXCHANGE=true
ENABLE_TRIANGULAR=true
ENABLE_WEBSOCKETS=true

# Connector limits
MAX_CONNECTIONS_PER_EXCHANGE=5
CONNECTION_TIMEOUT_SECONDS=10
RECONNECT_DELAY_SECONDS=5

# Opportunity filtering
MAX_OPPORTUNITIES_PER_SCAN=50
MIN_VOLUME_24H_USD=1000000
